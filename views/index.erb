
<html>

	<head>
		<title>Sudoku Game</title>
		<link rel="stylesheet" type="text/css" href="/stylesheets/application.css">
	</head>

	<body>

		<h1 class="h1"> There is always time for one more game of Sudoku</h1>
		<div id="flash"> <%= flash[:notice] %> </div>

		<div>
		<form action="/new game" method="post">
			<button class="easy" type = "submit" name="level" value="Easy">Easy</button>
			<button class="medium" type = "submit" name="level" value="Medium">Medium</button>
			<button class="difficult" type = "submit" name="level" value="Hard">Hard</button>
		</form>
		</div>
 
		<div id="sudoku">
		<form action="/" method="post">
			<% 3.times do |row| %>
				<div class="row">
					<% 3.times do |box| %>
						<div class="box">
							<% 3.times do |cell_row| %>
								<div class="cell-row">				
									<% 3.times do |cell| %>
									
											<%= partial :cell, :locals => {:cell_index => row * 27 + box * 3 + cell_row * 9 + cell} %>

									<% end %>			
								</div>			
							<% end %>				
						</div>
					<% end %>
				</div>	
			<% end %>	
		<button class = "button">Check solution</button>	
		</form>
		</div>

	</body>


</html>